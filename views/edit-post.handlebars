<div class="card">
    <h2 class="car-header">
        Edit Post
    </h2>
    <form class="card-body edit-form">
        <div class="form-group">
            <label class="form-label">
                Title:
            </label>
            <input type="text" class="form-input" name="post-title" value="{{post.title}}"/>
        </div>
        <div class="form-group">
            <label class="fom-label">
                Content:
            </label>
            <textarea name="post-content" class="form-textarea">{{post.content}}</textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary"><i class="bi bi-pencil"></i>
                Edit Post
            </button>
        </div>
    </form>
</div>

<script src="/js/edit.js"></script>